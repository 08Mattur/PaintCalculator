@model PaintCalculator.DTO.Window

@using (Html.BeginCollectionItem("Room.Windows"))
{
<div class="row windowRow mt-2">
    <div class="col-5">
        @Html.TextBoxFor(x => x.Height, new { @ID = "WindowH" + Html.ViewData.TemplateInfo.HtmlFieldPrefix, @class = "form-control", @Placeholder = "Height..." })
        @Html.ValidationMessageFor(x => x.Height, "", new { @class = "text-danger" })
    </div>
    <div class="col-5">
        @Html.TextBoxFor(x => x.Width, new { @ID = "WindowW" + Html.ViewData.TemplateInfo.HtmlFieldPrefix, @class = "form-control", @Placeholder = "Width..." })
        @Html.ValidationMessageFor(x => x.Width, "", new { @class = "text-danger" })
    </div>
    <div class="col-2 text-right">
        <button class="btn btn-danger deleteWindow btn-sm">
            <i class="fa fa-trash"></i>
        </button>
    </div>
</div>
}